<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:background="#20FD590C"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/black">


        <TableLayout
            android:layout_width="397dp"
            android:layout_height="382dp"
            android:layout_marginStart="15px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10px"
                android:gravity="center"
                android:text="CHỈNH SỬA KHOA"
                android:textSize="60px"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã khoa  : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/suakh"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="VD : 21CTHA003" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên khoa : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/suaten"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Nông nghiệp" />
            </TableRow>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:gravity="center">

                <Button
                    android:id="@+id/huykhoa"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#6CCBF1"
                    android:text="Hủy"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/suakhoa"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#980505"
                    android:text="Sửa"
                    android:textSize="20sp" />
            </LinearLayout>
        </TableLayout>
    </LinearLayout>

</LinearLayout>