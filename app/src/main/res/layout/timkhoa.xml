<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#EDDBDB"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Mã Khoa Cần Tìm"
        android:textAlignment="center"
        android:textColor="#0654DC"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nhapmakhoa"
        android:layout_width="314dp"
        android:layout_height="66dp"
        android:hint = "Mã Khoa Cần Tìm"
        android:layout_marginLeft="40dp" />
    <Button
        android:id="@+id/btn_timkhoa"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#79CD7D"
        android:text="TÌM"
        android:layout_marginLeft="40dp"/>
    <Button
        android:id="@+id/btn_huykhoa"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#79CD7D"
        android:text="HỦY TÌM "
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="240dp"/>

</LinearLayout>