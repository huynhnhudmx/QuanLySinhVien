<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongtinsv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CẬP NHẬT THÔNG TIN GIẢNG  VIÊN"
            android:gravity="center"
            android:textColor="#00BCD4"
            android:textSize="32sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="667dp"
            android:background="#2052b69a"
            android:orientation="vertical"

            android:outlineSpotShadowColor="@color/black">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MSGV : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/msgvien"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text=""/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/hoten"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text=""/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trình độ "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/trinhdodate"
                    android:layout_width="250dp"
                    android:layout_height="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã lớp : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/capmalop"
                    android:layout_width="250dp"
                    android:layout_height="50dp" />
            </TableRow>


            <Button
                android:id="@+id/bntudate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/khung1"
                android:text="UPDATE"
                android:layout_marginTop="100dp"
                app:backgroundTint="@null" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>