<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="667dp"
        android:background="#2009215E"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10px"
                android:gravity="center"
                android:text="THÊM DANH SÁCH LỚP"
                android:textSize="60px"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã lớp  : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/tch_add_mlop"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="VD : CCNTT21A" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên lớp : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/tch_add_tenlop"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Công nghệ thông tin" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã khoa : "
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/tch_add_makhoa"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="KTH" />
            </TableRow>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_themlop"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#6D8003"
                    android:text="Thêm" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_tch_canceldslop"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#6D8003"
                    android:text="Hủy" />
            </LinearLayout>
        </TableLayout>
    </LinearLayout>

</LinearLayout>