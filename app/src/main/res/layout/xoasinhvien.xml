<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="#81A38E"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:text="XÁC NHẬN XÓA SINH VIÊN"
            android:textSize="24dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginStart="-280dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Xác nhận sẽ xóa sinh viên này ?"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtnhapsv"
            android:layout_width="269dp"
            android:layout_height="71dp"
            android:layout_marginStart="-280dp"
            android:layout_marginTop="150dp"
            android:hint="Nhập Mã sinh viên để xóa"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnxacnhansv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:backgroundTint="#EFB7D9"
            android:layout_marginLeft="-120dp"
            android:layout_marginTop="240dp"
            android:text="Xác nhận" />

        <Button
            android:id="@+id/btnnhuysvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-230dp"
            android:backgroundTint="#EFB7D9"
            android:layout_marginLeft="-120dp"
            android:layout_marginTop="240dp"
            android:text="Hủy" />

    </LinearLayout>

</LinearLayout>