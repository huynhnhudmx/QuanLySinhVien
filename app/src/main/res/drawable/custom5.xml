<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"  android:color="@color/design_default_color_primary_variant">

    <item>
        <shape android:shape="oval">
            <size android:width="20dp"
                android:height="10dp"/>
            <corners android:radius="20dp"/>
            <stroke android:width="1dp"
                android:color="#E4A97C"/>
            <gradient android:angle="120"
                android:startColor="#82ECD6"
                android:centerColor="#9DBFF1"
                android:endColor="#CAA1ED"></gradient>
        </shape>
    </item>
</ripple>